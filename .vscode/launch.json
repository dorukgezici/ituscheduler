{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "chi",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "astro",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "command": "${workspaceFolder}/frontend/node_modules/.bin/astro dev"
    }
  ],
  "compounds": [
    {
      "name": "dev",
      "configurations": ["chi", "astro"]
    }
  ]
}
