---
import AuthCard from "@/components/AuthCard";
import Layout from "@/layouts/Layout.astro";
import { serverComponentClient } from "@/lib/supabaseClient";

const supabase = serverComponentClient(Astro.cookies);
const {
  data: { session },
} = await supabase.auth.getSession();
if (session?.user) return Astro.redirect("/");
---

<Layout title="Login | ITU Scheduler">
  <div class="grid place-items-center h-[75vh]">
    <AuthCard site={Astro.site} client:only="react" />
  </div>
</Layout>
